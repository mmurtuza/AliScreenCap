{

 "name": "ScreenCAP",
 "manifest_version": 2,
 "version": "1.0",
 "description": "Will be added later.",
 
 "permissions": [
    "activeTab",
    "contextMenus",
    "notifications",
    "tabs",
    "<all_urls>",
    "https://cdn.jsdelivr.net/"
],
 "browser_action":{
    "default_popup": "popup.html"
 },
 "background": {
     "persistent": true,
     "scripts": ["background.js"]
 },
 "content_scripts": [
     {
         "matches": ["<all_urls>"],
         "js": ["content.js"],
         "run_at": "document_start"
     }
 ]
}
